{
  "compilerOptions": {
    "module": "ESNext",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "noLib": false,
    "target": "es6",
    "baseUrl": ".",
    "sourceMap": true,
    "lib": ["ESNext", "DOM"],
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@packages/*": ["packages/*"],
      "@website/*": ["website/*"]
    }
  },
  "exclude": ["node_modules", "lib"]
}
